<p id="notice"><%= notice %></p>

<h1>Channel</h1>

<table class="video-requests-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @channels.each do |channel| %>
      <tr>
        <td><%= channel.name %></td>
        <td><%= channel.description %></td>
        <td><%= link_to 'Show', channel %></td>
        <% if user_signed_in? && current_user.id == channel.user_id %>
          <td><%= link_to 'Edit', edit_channel_path(channel) %></td>
          <td><%= link_to 'Destroy', channel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>

  </tbody>
</table>

<br>

