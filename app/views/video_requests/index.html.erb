<p id="notice"><%= notice %></p>

<h1>Video Requests</h1>

<table class="video-requests-table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Slots</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @video_requests.each do |video_request| %>
      <tr>
        <td><%= video_request.title %></td>
        <td><%= video_request.description %></td>
        <td><%= video_request.slots %></td>
        <td><%= link_to 'Show', video_request %></td>
        <td><%= link_to 'Edit', edit_video_request_path(video_request) %></td>
        <td><%= link_to 'Destroy', video_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

  </tbody>
</table>

<br>

<%= link_to 'New Video Request', new_video_request_path %>
